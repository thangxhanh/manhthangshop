                <div class="auth-form">
                    <form class="auth-form__container" id="form-2" method="POST" action="/verify/dangnhap_">
                        <div class="auth-form__header">
                            <h3 class="auth-form__heading">Đăng nhập</h3>
                            <span class="auth-form__btn">Đăng ký</span>
                        </div>

                        <div class="auth-form__form">
                            <div class="auth-form__group">
                                <label for="email" class="form-label">Email</label>
                                <input id="email" type="text" name="email" class="auth-form__input" placeholder="Nhập email của bạn">
                                <span class="form-message"></span>
                            </div>
                            <div class="auth-form__group">
                                <label for="pass" class="form-label">Mật khẩu</label>
                                <input id="pass" type="password" name="pass" class="auth-form__input" placeholder="Nhập mật khẩu của bạn">
